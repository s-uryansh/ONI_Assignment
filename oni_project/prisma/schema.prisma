
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  books Book[]
}
model Author {
  id Int @id @default(autoincrement())
  name String
}

model Book {
  id Int @id @default(autoincrement())
  title String
  author String
  borrowedBy Int?
  borrower User? @relation(fields: [borrowedBy], references: [id])
}

